ifeq "${IMP}" "nist"
EMU_DEF_CONF += -DDRIVER_TRIALS_WARM=10 -DDRIVER_TRIALS_REAL=50 -DDRIVER_MEASURE=1 

else ifeq "${ALG}" "ascon"
EMU_DEF_CONF  = -DASCON_RV32_TYPE2
EMU_DEF_CONF += -DENABLE_ZBKB_ZBKX 
EMU_DEF_CONF += -DDRIVER_TRIALS_WARM=10 -DDRIVER_TRIALS_REAL=50 -DDRIVER_MEASURE=1 

else ifeq "${ALG}" "elephant"
EMU_DEF_CONF  = -DELEPHANT_RV32_TYPE3
EMU_DEF_CONF += -DELEPHANT_STATE_5X32B
#EMU_DEF_CONF += -DELEPHANT_STATE_4X40B
EMU_DEF_CONF += -DDRIVER_TRIALS_WARM=10 -DDRIVER_TRIALS_REAL=50 -DDRIVER_MEASURE=1 

else ifeq "${ALG}" "gift"
EMU_DEF_CONF  = -DGIFT_RV32_TYPE2 -DGIFT_FIXSLICING
#EMU_DEF_CONF += -DENABLE_ZBKB_ZBKX 
EMU_DEF_CONF += -DDRIVER_TRIALS_WARM=10 -DDRIVER_TRIALS_REAL=50 -DDRIVER_MEASURE=1 

else ifeq "${ALG}" "photon"
EMU_DEF_CONF  = -DPHOTON_RV32_TYPE1
EMU_DEF_CONF += -DPHOTON_RV32_UNROLL 
EMU_DEF_CONF += -DDRIVER_TRIALS_WARM=10 -DDRIVER_TRIALS_REAL=50 -DDRIVER_MEASURE=1 

else ifeq "${ALG}" "romulus"
EMU_DEF_CONF  = -DROMULUS_RV32_TYPE2
EMU_DEF_CONF += -DROMULUS_RV32_UNROLL 
EMU_DEF_CONF += -DDRIVER_TRIALS_WARM=10 -DDRIVER_TRIALS_REAL=50 -DDRIVER_MEASURE=1 

else ifeq "${ALG}" "sparkle"
EMU_DEF_CONF  = -DSPARKLE_RV32_TYPE1
#EMU_DEF_CONF += -DSPARKLE_RV32_ELL -DSPARKLE_RV32_RCON
EMU_DEF_CONF += -DSPARKLE_RV32_UNROLL 
EMU_DEF_CONF += -DSPARKLE_REV_EXTERN -DSPARKLE_FWD_EXTERN 
EMU_DEF_CONF += -DDRIVER_TRIALS_WARM=10 -DDRIVER_TRIALS_REAL=50 -DDRIVER_MEASURE=1 

else ifeq "${ALG}" "jambu"
EMU_DEF_CONF  = -DJAMBU_RV32_TYPE3
EMU_DEF_CONF += -DJAMBU_RV32_UNROLL 
EMU_DEF_CONF += -DDRIVER_TRIALS_WARM=10 -DDRIVER_TRIALS_REAL=50 -DDRIVER_MEASURE=1 

else ifeq "${ALG}" "xoodyak"
EMU_DEF_CONF  = -DXOODYAK_RV32_TYPE1
EMU_DEF_CONF += -DENABLE_ZBKB_ZBKX 
EMU_DEF_CONF += -DDRIVER_TRIALS_WARM=10 -DDRIVER_TRIALS_REAL=50 -DDRIVER_MEASURE=1 
endif
