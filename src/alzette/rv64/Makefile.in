ifndef RISCV
  $(error "set RISCV         environment variable to point at toolchain installation")
endif
ifndef RISCV_ALZETTE
  $(error "set RISCV_ALZETTE environment variable to point at toolchain installation")
endif

export GCC_PREFIX = ${RISCV}/bin/riscv64-unknown-elf

export GCC_FLAGS  = -march='rv64gc' -mabi='lp64'
export GCC_PATHS  = 
export GCC_LIBS   = 

run       : ${TARGET}.elf
	@${RISCV_ALZETTE}/bin/spike    --isa='rv64gc' ${RISCV_ALZETTE}/riscv64-unknown-elf/bin/pk ${<}
run-debug : ${TARGET}.elf
	@${RISCV_ALZETTE}/bin/spike -d --isa='rv64gc' ${RISCV_ALZETTE}/riscv64-unknown-elf/bin/pk ${<}
